@using Alarmist.API.Models;
@model RegisterViewModel
@{
    ViewData["Title"] = "Alarmist - Utwórz konto";
    Layout = "_AccountLayout";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="form-box">
    <div class="form-header">
        <header>Rejestracja</header>
    </div>

    <form method="post" asp-page-handler="" asp-antiforgery="true">
        <div class="input-box">
            <input type="email" asp-for="Email" class="input-field" placeholder="Email" autocomplete="off" required />
        </div>
        <div class="input-box">
            <input type="password" asp-for="Password" class="input-field" placeholder="Hasło" autocomplete="new-password" required />
        </div>

        <div class="input-box">
            <input type="password" asp-for="PasswordRepeat" class="input-field" placeholder="Powtórz hasło" autocomplete="new-password" required />
        </div>

        <div class="input-submit">
            <button type="submit" class="submit-btn" id="submit"></button>
            <label for="submit">Utwórz konto</label>
        </div>

        <div class="form-link">
            <p>Masz już konto? <a href="/account-login">Zaloguj się</a></p>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>